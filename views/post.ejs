<!DOCTYPE html>
<html lang="ko">
    <head>
        <meta charset="UTF-8">
        <title>포스트</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="../public/css/signup.css">
        <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
        
    </head>
    <body>
    <form action="/profile/post" method="post" enctype="multipart/form-data">

        <!-- wrapper -->
        <div id="wrapper">

            <!-- content-->
            <div id="content">

                <!-- SELECT FILM -->
                <div>
                    <h3 class="film"><label for="film">필름 선택</label></h3>
                    <span class="filmbox">
                        <select id="film" name="film" class="sel">
                            <option>필름 선택</option>
                            <% filmTitles.forEach(film => { %>
                            <option value="<%= film.id %>"><%= film.title %></option>
                            <% }) %>
                        </select>                            
                    </span>
                    <span class="error_next_box">필수 정보입니다.</span>
                </div>

                <!-- TITLE -->
                <div>
                    <h3 class="post_title">
                        <label for="title">제목</label>
                    </h3>
                    <span class="box title">
                        <input type="text" id="post_title" name="post_title" maxlength="100">
                    </span>
                </div>

                <!-- IMAGE -->
                <div>
                    <h3 class="image">
                        <label for="image">이미지</label>
                    </h3>
                    <span class="box title">
                        <input type="file" id="image" name="image" maxlength="200">
                    </span>
                </div>

                 <!-- CONTENT -->
                 <div>
                    <h3 class="post_content"><label for="content"> 내용</label></h3>
                    <span class="box content">
                        <input style="width:80%; height: 100px;" type="text" id="content" name="content" maxlength="1000">
                    </span> 
                </div>

                <!-- SUBMIT BTN-->
                <div class="btn_area">
                    <button type="submit" id="submit" style="background-color:rgb(28, 80, 136);">
                        <span>업로드</span>
                    </button>
                </div>    

            </div> 
            <!-- content-->

        </div> 
        <!-- wrapper -->
    <script src="main.js"></script>
    </form>
    </body>
</html>